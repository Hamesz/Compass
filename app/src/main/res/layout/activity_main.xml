<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompassActivity">


    <TextView
        android:id="@+id/directiontextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Direction: "
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

    <ImageView
        android:id="@+id/compassimageview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/battery_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/directiontextView"
        app:srcCompat="@drawable/compass1" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ToolBarStyle" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/battery_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="0dip"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/chargeIV"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    app:srcCompat="@drawable/ic_battery_charge" />

                <ImageView
                    android:id="@+id/voltageIV"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    app:srcCompat="@drawable/ic_battery_voltage" />

                <ImageView
                    android:id="@+id/tempIV"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_column="2"
                    app:srcCompat="@drawable/ic_battery_temp" />

            </TableRow>

            <TableRow
                android:layout_width="0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/chargeTV"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:text="87%"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/voltageTV"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:text="3.3V"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tempTV"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:text="37ยบ"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>